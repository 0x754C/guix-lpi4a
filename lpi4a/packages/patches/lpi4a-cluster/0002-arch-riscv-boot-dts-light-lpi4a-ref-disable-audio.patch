From bd280dfca881ddb42a7d784269ea21b1c31d6019 Mon Sep 17 00:00:00 2001
From: Lu Hui <luhui@sipeed.com>
Date: Wed, 30 Aug 2023 11:07:07 +0800
Subject: [PATCH] arch: riscv: boot: dts: light-lpi4a-ref: disable audio

---
 arch/riscv/boot/dts/thead/light-lpi4a-ref.dts | 24 ++-----------------
 1 file changed, 2 insertions(+), 22 deletions(-)

diff --git a/arch/riscv/boot/dts/thead/light-lpi4a-ref.dts b/arch/riscv/boot/dts/thead/light-lpi4a-ref.dts
index a663286d7..7a3e835aa 100644
--- a/arch/riscv/boot/dts/thead/light-lpi4a-ref.dts
+++ b/arch/riscv/boot/dts/thead/light-lpi4a-ref.dts
@@ -653,7 +653,7 @@ &adc {
 
 &audio_i2c0 {
 	clock-frequency = <100000>;
-	status = "okay";
+	status = "disabled";
 
 	es8156_audio_codec: es8156@8 {
 		#sound-dai-cells = <0>;
@@ -686,7 +686,7 @@ audio_aw87519_pa1@5b {
 
 &audio_i2c1 {
 	clock-frequency = <100000>;
-	status = "okay";
+	status = "disabled";
 
 	es8156_audio_codec_1: es8156@8 {
 		#sound-dai-cells = <0>;
@@ -1395,26 +1395,6 @@ hdmi_tx_in: endpoint {
 
 &lightsound {
         status = "okay";
-        simple-audio-card,dai-link@0 {          /* I2S - AUDIO SYS CODEC 8156*/
-                reg = <0>;
-                format = "i2s";
-                cpu {
-                        sound-dai = <&i2s1 0>;
-                };
-                codec {
-                        sound-dai = <&es8156_audio_codec>;
-                };
-        };
-        simple-audio-card,dai-link@1 {          /* I2S - AUDIO SYS CODEC 7210*/
-                reg = <1>;
-                format = "i2s";
-                cpu {
-                        sound-dai = <&i2s1 0>;
-                };
-                codec {
-                        sound-dai = <&es7210_audio_codec>;
-                };
-        };
         simple-audio-card,dai-link@2 {          /* I2S - HDMI */
                 reg = <2>;
                 format = "i2s";
-- 
