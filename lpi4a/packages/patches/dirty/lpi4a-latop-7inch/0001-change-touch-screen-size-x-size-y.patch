From: Lu Hui <luhui@sipeed.com>
Date: Tue, 22 Aug 2023 21:23:03 +0800
Subject: [PATCH] change touch screen size-x & size-y

---
 arch/riscv/boot/dts/thead/light-lpi4a-ref.dts | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/arch/riscv/boot/dts/thead/light-lpi4a-ref.dts b/arch/riscv/boot/dts/thead/light-lpi4a-ref.dts
index 32fcf55d5..742f007fa 100644
--- a/arch/riscv/boot/dts/thead/light-lpi4a-ref.dts
+++ b/arch/riscv/boot/dts/thead/light-lpi4a-ref.dts
@@ -1018,8 +1018,8 @@ touch@14 {
 		irq-gpios = <&ao_gpio_porta 3 0>; 
 		reset-gpios = <&pcal6408ahk_d 0 0>; 
 		AVDD28-supply = <&reg_tp_pwr_en>;
-		touchscreen-size-x = <800>;
-		touchscreen-size-y = <1280>;
+		touchscreen-size-x = <1024>;
+		touchscreen-size-y = <600>;
 		tp-size = <9271>;
 		status = "okay";
 	};
